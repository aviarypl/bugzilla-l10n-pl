#!/bin/sh

TMPDIR=bugzilla$1-pl

mkdir $TMPDIR
mkdir $TMPDIR/latki
cp README $TMPDIR

svn export file:///home/svn/aviarypl/bugzilla/branches/2.18/template/pl $TMPDIR/pl >/dev/null

svn diff file:///home/svn/aviarypl/bugzilla/vendor/2.18 \
    file:///home/svn/aviarypl/bugzilla/branches/2.18 | \
    perl -ne 'if (/^Index:/){ $skip = m#: template/# or m#: build/#} print unless $skip' \
        >$TMPDIR/latki/code.diff

tar -cvzf bugzilla2.18.tar.gz $TMPDIR >/dev/null

rm -r $TMPDIR

