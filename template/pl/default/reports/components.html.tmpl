[%# INTERFACE:
  # product: object. The product for which we want to display component descriptions.
  #%]

[% title = BLOCK %]
  Komponenty produktu [% product.name FILTER html %]
[% END %]

[% PROCESS global/header.html.tmpl title = title %]

[% IF Param("useqacontact") %]
  [% numcols = 3 %]
[% ELSE %]
  [% numcols = 2 %]
[% END %]

<p>
  [% product.description FILTER html_light %]
</p>

<table>
  <tr>
    <th align="left">Komponent</th>
    <th align="left">Domyślny odpowiedzialny</th>
    [% IF Param("useqacontact") %]
      <th align="left">Domyślny specjalista QA</th>
    [% END %]
  </tr>

  [% FOREACH comp = product.components %]
    [% INCLUDE describe_comp %]
  [% END %]
  <tr>
    <td colspan="[% numcols %]">
      <hr>
    </td>
  </tr>
</table>

[% PROCESS global/footer.html.tmpl %]

[%############################################################################%]
[%# BLOCK for components                                                      %]
[%############################################################################%]

[% BLOCK describe_comp %]
  <tr>
    <td colspan="[% numcols %]">
      <hr>
    </td>
  </tr>
  <tr>
    <td rowspan="2">
      <a name="[% comp.name FILTER html %]">[% comp.name FILTER html %]</a>
    </td>
    <td>
      [% INCLUDE global/user.html.tmpl who = comp.default_assignee %]
    </td>
    [% IF Param("useqacontact") %]
      <td>
        [% INCLUDE global/user.html.tmpl who = comp.default_qa_contact %]
      </td>
    [% END %]
  </tr>
  <tr>
    <td colspan="[% numcols - 1 %]">
      [% comp.description FILTER html_light %]
    </td>
  </tr>
[% END %]
