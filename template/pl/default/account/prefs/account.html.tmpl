[%# INTERFACE:
  # realname: string. The user's real name, if any.
  # login_change_date: string. The date the email change will be complete. (optional)
  # new_login_name:    string. The user's new Bugzilla login whilst not confirmed. (optional)
  #%]

<table>
  <tr>
    <td colspan="3">
      Podaj swoje hasło, by potwierdzić zmiany w ustawieniach konta.
    </td>
  </tr>
  <tr>
    <th align="right">Hasło:</th>
    <td>
      <input type="hidden" name="old_login" value="[% user.login FILTER html %]">
      <input type="password" name="old_password">
    </td>
  </tr>              
  <tr>
    <td colspan="2"><hr></td>
  </tr>
  [% IF user.authorizer.can_change_password %]
    <tr>
      <th align="right">Nowe hasło:</th>
      <td>
        <input type="password" name="new_password1">
      </td>
    </tr>              

    <tr>
      <th align="right">Potwierdź nowe hasło:</th>
      <td>
        <input type="password" name="new_password2">
      </td>
    </tr>              
  [% END %]

  <tr>
    <th align="right">Imię i nazwisko <small>(opcjonalne, ale zalecane)</small>:</th>
    <td>
      <input size="35" name="realname" value="[% realname FILTER html %]">
    </td>
  </tr>  

  [% IF user.authorizer.can_change_email && Param('allowemailchange') %]
    [% IF login_change_date %]
      [% IF new_login_name %]
        <tr>
          <th align="right">Proponowany nowy adres e-mail:</th>
          <td>[% new_login_name FILTER html %]</td>
        </tr>
        <tr>
          <th align="right">Data wygaśnięcia prośby:</th>
          <td>[% login_change_date FILTER time %]</td>
        </tr>
      [% ELSE %]
        <tr>
          <th align="right">Potwierdzony adres e-mail:</th>
          <td>[% user.login FILTER html %]</td>
        </tr>
        <tr>
          <th align="right">Data zakończenia:</th>
          <td>[% login_change_date FILTER time %]</td>
        </tr>
      [% END %]
    [% ELSE %]
      <tr>
        <th align="right">Nowy adres e-mail:</th>
        <td>
          <input size="35" name="new_login_name">
        </td>
      </tr>
    [% END %]
  [% END %]

  [% Hook.process('field') %]

</table>
