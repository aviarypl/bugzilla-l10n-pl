[%# INTERFACE:
  # auth_err_tag: string. The tag for the error
  # info: hash. Additional variables which may be used when printing details
  #   of the error.
  #%]

[% PROCESS global/variables.none.tmpl %]

[% SWITCH auth_err_tag %]
  [% CASE "cannot_retreive_attr" %]
    Atrybut LDAP [% info.attr FILTER html %] nie został znaleziony.

  [% CASE "connect_failed" %]
    Podczas próby połącznia z serwerem LDAP wystąpił błąd.
    [% IF info.errstr %]
      Błąd zgłoszony przez serwer to: <tt>[% info.errstr FILTER html %]</tt>.
    [% END %]

  [% CASE "no_userid" %]
    Twoje konto [% terms.Bugzilli %] zostało utworzone, jednakże nie jest możliwe
    znalezienie nowoutworzonego identyfikatora użytkownika.

  [% CASE "server_not_defined" %]
    Serwer LDAP przechowujący dane uwierzytelniania nie został podany.

  [% CASE %]
    Nieobsłużony błąd uwierzytelniania: <tt>[% auth_err_tag FILTER html %]</tt>

[% END %]
