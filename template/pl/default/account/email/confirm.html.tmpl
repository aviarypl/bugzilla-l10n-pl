[%# INTERFACE:
  # token: string. The token to be used in this address change.
  #%]
  
[% title = "Potwierdzenie zmiany adresu e-mail" %]
[% PROCESS global/header.html.tmpl %]

<p>
  Aby zmienić adres e-mail, należy podać hasło:
</p>

<form method="post" action="token.cgi">
  <input type="hidden" name="t" value="[% token FILTER html %]">
  <input type="hidden" name="a" value="chgem">
  <table>
    <tr>
      <th>Hasło:</th>
      <td><input type="password" name="password" size="36"></td>
    </tr>
    <tr>
      <th>&nbsp;</th>
      <td><input type="submit" id="confirm" value="Wyślij"></td>
    </tr>
  </table>
</form>

[% PROCESS global/footer.html.tmpl %]
