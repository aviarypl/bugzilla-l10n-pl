[%# INTERFACE:
  # proddesc: hash. May be empty. The hash keys are the products, and the values
  # are their descriptions.
  #%]

[% PROCESS global/variables.none.tmpl %]

[% IF target == "enter_bug.cgi" %]
  [% title = "Zgłaszanie $terms.bledu" %]
  [% h2 = BLOCK %]Proszę wybrać produkt, dla którego chcesz zgłosić [% terms.blad %]. [% END %]
[% ELSIF target == "describecomponents.cgi" %]
  [% title = "Opisy komponentów $terms.Bugzilli" %]
  [% h2 = "Proszę wybrać produkt, do którego należy komponent, który chcesz opisać." %]
[% END %]

[% DEFAULT title = "Wybierz produkt" %]
[% PROCESS global/header.html.tmpl %]

<table>

[% FOREACH p = proddesc.keys.sort %]
  <tr>
    <th align="right" valign="top">
      <a href="[% target %]?product=[% p FILTER url_quote %]
            [% IF format %]&amp;format=[% format FILTER url_quote %][% END %]">
      [% p FILTER html %]</a>:
    </th>

    [% IF proddesc.$p %]
      <td valign="top">&nbsp;[% proddesc.$p %]</td>
    [% END %]
  </tr>
[% END %]

</table>

[% PROCESS global/footer.html.tmpl %]
