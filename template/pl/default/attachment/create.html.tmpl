[%# Define strings that will serve as the title and header of this page %]
[% title = BLOCK %]Tworzenie załącznika do [% terms.bledu %] #[% bug.bug_id %][% END %]
[% header = BLOCK %]Tworzenie nowego załącznika do 
  [%+ "$terms.bledu $bug.bug_id" FILTER bug_link(bug) FILTER none %][% END %]
[% subheader = BLOCK %][% bug.short_desc FILTER html %][% END %]

[% PROCESS global/header.html.tmpl
  title = title
  header = header
  subheader = subheader
  style_urls = [ 'skins/standard/attachment.css' ]
  yui = [ 'autocomplete' ]
  javascript_urls = [ "js/attachment.js", 'js/field.js', "js/util.js", "js/TUI.js" ]
  doc_section = "attachments.html"
%]

<script type="text/javascript">
<!--
TUI_hide_default('attachment_text_field');
-->
</script>

<form name="entryform" method="post" action="attachment.cgi"
      enctype="multipart/form-data"
      onsubmit="return validateAttachmentForm(this)">
  <input type="hidden" name="bugid" value="[% bug.bug_id %]">
  <input type="hidden" name="action" value="insert">
  <input type="hidden" name="token" value="[% token FILTER html %]">

  <table class="attachment_entry">
    [% PROCESS attachment/createformcontents.html.tmpl %]

    [%# Additional fields for attachments on existing bugs: %]
    [% IF attachments.size %]
    <tr>
      <th>Dezaktualizacja:</th>
      <td>
        <em>Zaznacz załączniki, które zostaną zdezaktualizowane po dodaniu nowego załącznika. (opcjonalne)</em><br>
          [% FOREACH attachment = attachments %]
              <input type="checkbox" id="[% attachment.id %]"
                   name="obsolete" value="[% attachment.id %]">
              <a href="attachment.cgi?id=[% attachment.id %]&amp;action=edit">[% attachment.id %]: [% attachment.description FILTER html %]</a><br>
          [% END %]
      </td>
    </tr>
    [% END %]

    [% IF (user.id != bug.assigned_to.id) AND user.in_group("editbugs", bug.product_id) %]
      <tr>
        <th>Przepisanie:</th>
        <td>
          <em>Aby przepisać ten [% terms.blad %] na siebie,
              zaznacz poniższe pole wyboru.</em><br>
          <input type="checkbox" id="takebug" name="takebug" value="1">
          <label for="takebug">Przepisz [% terms.blad %] na mnie</label>
          [% bug_statuses = [] %]
          [% FOREACH bug_status = bug.status.can_change_to %]
            [% NEXT IF bug_status.name == "UNCONFIRMED" 
                       && !bug.product_obj.allows_unconfirmed %]
            [% bug_statuses.push(bug_status) IF bug_status.is_open %]
          [% END %]
          [% IF bug_statuses.size %]
            <label for="takebug">i ustaw status [% terms.bledu %] na</label>
            <select id="bug_status" name="bug_status">
              <option value="[% bug.status.name FILTER html %]">[% display_value("bug_status", bug.status.name) FILTER html %] (obecny)</option>
              [% FOREACH bug_status = bug_statuses %]
                [% NEXT IF bug_status.id == bug.status.id %]
                <option value="[% bug_status.name FILTER html %]">[% display_value("bug_status", bug_status.name) FILTER html %]</option>
              [% END %]
            </select>
          [% END %]
        </td>
      </tr>
    [% END %]
    <tr>
      <th><label for="comment">Komentarz:</label></th>
      <td>
        <em>Dodaj komentarz dotyczący tego załącznika. (opcjonalne)</em><br>
        [% INCLUDE global/textarea.html.tmpl
          name    = 'comment'
          id      = 'comment'
          minrows = 6
          maxrows = 15
          cols    = constants.COMMENT_COLS
          wrap    = 'soft'
        %]
        [% IF NOT bug.cc || NOT bug.cc.contains(user.login) %]
          <br>
          <input type="checkbox" id="addselfcc" name="addselfcc"
            [%~ ' checked="checked"'
                IF user.settings.state_addselfcc.value == 'always'
                   || (!bug.user.has_any_role
                       && user.settings.state_addselfcc.value == 'cc_unless_role') %]>
          <label for="addselfcc">Dodaj mnie do listy obserwatorów</label>
        [% END %]
      </td>
    </tr>
    [% IF user.is_insider %]
      <tr>
        <th>Prywatność:</th>
        <td>
          <input type="checkbox" name="isprivate" id="isprivate"
          value="1" onClick="updateCommentPrivacy(this)">
          <label for="isprivate">
            Oznacz załącznik i komentarz jako prywatny. Będzie widoczny tylko dla członków grupy
            <strong>[% Param('insidergroup') FILTER html %]</strong>
          </label>
        </td>
      </tr>
    [% END %]

    [% Hook.process('form_before_submit') %]

    <tr>
      <th>&nbsp;</th>
      <td><input type="submit" id="create" value="Dodaj załącznik"></td>
    </tr>
  </table>

</form>

[% Hook.process('end') %]

[% PROCESS global/footer.html.tmpl %]
