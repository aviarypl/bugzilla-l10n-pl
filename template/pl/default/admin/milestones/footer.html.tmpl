[%# INTERFACE:
  # product: object; Bugzilla::Product object representing the product to
  #               which the milestone belongs.
  #
  # milestone: object; Bugzilla::Milestone object representing the
  #                    milestone.
  #
  # no_XXX_link: boolean; if defined, then don't show the corresponding
  #                       link. Supported parameters are:
  #
  # no_edit_milestone_link
  # no_edit_other_milestones_link
  # no_add_milestone_link
  #%]

<hr>

<p>

[% UNLESS no_add_milestone_link %]
  <a title="Dodaj wersję docelową do '[% product.name FILTER html %]'"
     href="editmilestones.cgi?action=add&amp;product=
          [%- product.name FILTER url_quote %]">Nowa wersja docelowa</a> |
[% END %]

[% IF milestone.name && !no_edit_milestone_link %]
   <a 
  title="Edycja wersji docelowej '[% milestone.name FILTER html %]' produktu '
         [%- product.name FILTER html %]'"
  href="editmilestones.cgi?action=edit&amp;product=
        [%- product.name FILTER url_quote %]&amp;milestone=
        [%- milestone.name FILTER url_quote %]"> Wersja docelowa
        '[% milestone.name FILTER html %]'</a> |
[% END %]

[% UNLESS no_edit_other_milestones_link %]
   <a href="editmilestones.cgi?product=
    [%- product.name FILTER url_quote %]">Inne wersje docelowe produktu '[% product.name FILTER html %]'</a> |

[% END %]

  <a 
  href="editproducts.cgi?action=edit&amp;product=
        [%- product.name FILTER url_quote %]">Produkt '[% product.name FILTER html %]'</a>

</p>
