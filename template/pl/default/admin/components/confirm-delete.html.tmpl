[%# INTERFACE:
  # comp: object; Bugzilla::Component object representing the component the
  #               user wants to delete.
  # prod: object; Bugzilla::Product object representing the product to
  #               which the component belongs.
  #%]

[% title = BLOCK %]Usuwanie komponentów produktu '[% prod.name FILTER html %]'
  [% END %]

[% PROCESS global/header.html.tmpl
  title = title
%]

<table border="1" cellpadding="4" cellspacing="0">
<tr bgcolor="#6666FF">
  <th valign="top" align="left">Pole</th>
  <th valign="top" align="left">Wartość</th>
</tr>
<tr>
  <td valign="top">Komponent:</td>
  <td valign="top">[% comp.name FILTER html %]</td>
</tr>
<tr>
  <td valign="top">Opis komponentu:</td>
  <td valign="top">[% comp.description FILTER html %]</td>
</tr>
<tr>
  <td valign="top">Domyślny właściciel:</td>
  <td valign="top">[% comp.default_assignee.login FILTER html %]</td>
  
[% IF Param('useqacontact') %]
</tr>
<tr>
  <td valign="top">Domyślny kontakt QA:</td>
  <td valign="top">[% comp.default_qa_contact.login FILTER html %]</td>
[% END %]
  
</tr>
<tr>
  <td valign="top">Produkt komponentu:</td>
  <td valign="top">[% prod.name FILTER html %]</td>

[% IF prod.description %]
</tr>
<tr>
  <td valign="top">Opis produktu:</td>
  <td valign="top">[% prod.description FILTER html %]</td>
[% END %]

[% IF Param('usetargetmilestone') %]
</tr>
<tr>
  <td valign="top">URL do wersji docelowych produktu:</td>
  <td valign="top">
    <a href="[% prod.milestone_url FILTER uri %]">
      [% prod.milestone_url FILTER html %]
    </a>
  </td>
[% END %]

</tr>
<tr>
  <TD VALIGN="top">Zamknięty dla [% terms.bledow %]:</TD>
  <TD VALIGN="top">[% IF prod.disallow_new %]Tak[% ELSE %]Nie[% END %]</td>
</tr>
<tr>
  <td valign="top">[% terms.Bledy %]:</td>
  <td valign="top">
[% IF comp.bug_count %]
  <a title="Lista [% terms.bledow %] dla komponentu '[% comp.name FILTER html %]'"
     href="buglist.cgi?component=[% comp.name FILTER url_quote %]&amp;product=
          [%- prod.name FILTER url_quote %]">[% comp.bug_count %]</a>
[% ELSE %]
  Brak
[% END %]
  </td>
</tr>
</table>

<h2>Potwierdzenie</h2>
  
[% IF comp.bug_count %]

  [% IF !Param("allowbugdeletion") %]

    Niestety ten komponent nadal ma [% bug_count %] 
    
    [% PROCESS ODMIEN c=bug_count o1="przypisany $terms.blad"
        o2="przypisane $terms.bledy" o3="przypisanych $terms.bledow" %]

    do tego komponentu. Musisz najpierw przepisać 

    [% IF comp.bug_count > 1 %]
       te [% terms.bledy %] 
    [% ELSE %]
       ten [% terms.blad %]
    [% END %]

    do innego komponentu, zanim możliwe będzie skasowanie go.

  [% ELSE %]

    <table border="0" cellpadding="20" width="70%" bgcolor="red"><tr><td>

      Ten komponent ma [% bug_count %] 
    
      [% PROCESS ODMIEN c=comp.bug_count o1="przypisany $terms.blad!"
          o2="przypisane $terms.bledy!" o3="przypisanych $terms.bledow!" %]
        
      Jeśli skasujesz ten komponent, <b><blink>WSZYSTKIE</blink></b> 
      [% terms.bledy %] oraz cała ich historia również zostanie  usunięta.
      </td></tr></table>

  [% END %]

[% END %]

[% IF comp.bug_count == 0 || Param('allowbugdeletion') %]

  <p>Czy jesteś pewien że chcesz usunąć ten komponent?<p>
  
  <form method="post" action="editcomponents.cgi">
  <input type="submit" value="Tak, usuń">
  <input type="hidden" name="action" value="delete">
  <input type="hidden" name="product" value="[% prod.name FILTER html %]">
  <input type="hidden" name="component" value="[% comp.name FILTER html %]">
  </form>

[% END %]

[% PROCESS admin/components/footer.html.tmpl %]

[% PROCESS admin/components/footer.html.tmpl
  name = comp.name
  product = prod.name
%]
