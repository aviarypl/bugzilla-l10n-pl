[%# INTERFACE:
  # name: string; the name of the deleted component.
  #
  # product: string; the name of the product the component belonged to
  #
  # deleted_bug_count: number; the number of bugs which were deleted
  #                            (if bug deletion is allowed)
  #%]
  
[% title = BLOCK %]Usuwanie komponentu '[% name FILTER html %]' z produktu
                   '[% product FILTER html %]'[% END %]
[% PROCESS global/header.html.tmpl
  title = title
%]

<p>
Usunięto 
[% IF deleted_bug_count %]
  [% deleted_bug_count %]
  [% PROCESS ODMIEN c=deleted_bug_count o1="$terms.blad."
     o2="$terms.bledy." o3="$terms.bledow." %]
  </p><p>
  Wszystkie odwołania do usuniętych [% terms.bledow %] zostały skasowane.
[% ELSE %]
  Nie było [% terms.bledow %] w tym produkcie.
[% END %]
</p>

<p>Ustawienia flag zostały skasowane.</p>

<p>Komponent '[% name FILTER html %]' został usunięty.</p>

[% PROCESS admin/components/footer.html.tmpl
  no_edit_component_link = 1
 %]

[% PROCESS global/footer.html.tmpl %]
