[%# INTERFACE:
  #      removed_na: array of hashes; groups not applicable for the product.  
  # added_mandatory: array of hashes; groups mandatory for the product.  
  #  classification: Bugzilla::Classification object;  product classification.
  #         product: Bugzilla::Product object; the product.
  #%]

[% title = BLOCK %]
    Aktualizacja kontroli grup dla produktu [% product.name FILTER html %]
[% END %]

[% PROCESS global/header.html.tmpl
  title = title
%]
<p>
[% IF removed_na.size > 0 %]
  [% FOREACH g = removed_na %]
    Usuwanie [% terms.bledow %] z grupy '[% g.name FILTER html %]', która
    nie jest już odpowiednia dla tego produktu<p>
    [% terms.Bledow %] usuniętych: [% g.bug_count FILTER html %]<p>
  [% END %]
[% END %]

[% IF added_mandatory.size > 0 %]
  [% FOREACH g = added_mandatory %]
    Dodawanie [% terms.bledow %] do grupy '[% g.name FILTER html %]', która
    jest obowiązkowa dla tego produktu<p>
    [% terms.Bledow %] dodanych: [% g.bug_count FILTER html %]<p>  [% END %]
[% END %]

Zakończono aktualizację kontroli grup<p>

[% PROCESS admin/products/footer.html.tmpl %]

[% PROCESS global/footer.html.tmpl %]
