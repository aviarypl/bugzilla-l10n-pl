[%
   title = "Lokalizacja"
   desc = "Pozwala ustawić języki interfejsu dostępne dla użytkowników systemu"
%]

[%# Get the list of available languages %]
[% available_languages = "unknown" %]
[% FOREACH param = params %]
  [% IF param.name == "languages" %]
    [% available_languages = param.extra_desc.available_languages FILTER html %]
  [% END %]
[% END %]

[% param_descs = {
  languages => "Lista kodów języków wg RFC 1766 rozdzielonych przecinkami. " _
               "Określają one języki, w których będzie wyświetlany interfejs " _
               "${terms.Bugzilli}. Uwaga: przed dodaniem języka w tym miejscu " _
               "należy zainstalować odpowiedni pakiet językowy. Użyty zostanie język, " _
               "który znajduje się w tej liście i który ma najwyższy priorytet " _
               "w nagłówku Accept-Language wysyłanym przez przeglądarkę użytkownika.<br> " _
               "Dostępne języki: $available_languages" ,

  defaultlanguage => "Domyślny język intefejsu $terms.Bugzilli w przypadku braku " _
                     "odpowiedniej wartości w nagłówku Accept-Language użytkownika." }
%]
