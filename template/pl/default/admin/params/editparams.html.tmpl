[% curpanel = -1 %]
[% panels = panels.nsort('sortkey') %]

[% FOREACH panel = panels %]
  [% PROCESS "admin/params/${panel.name}.html.tmpl"
             params = panel.param_list %]
  [% panel.title = title %]
  [% panel.desc = desc %]
  [% panel.param_descs = param_descs %]
  [% IF panel.current %][% curpanel = loop.index %][% END %]
[% END %]

[% current_panel = panels.$curpanel %]

[%# We cannot call header.html.tmpl earlier as we have to know
    which panel is active first, in order to get its title %]

[% title = BLOCK %]
  [% IF curpanel == -1 %]
    Parametry: Indeks
  [% ELSE %]
    Konfiguracja:
    [%+ current_panel.title FILTER html %]
  [% END %]
[% END %]

[% PROCESS global/header.html.tmpl
   title = title
   message = message
   style_urls = ['skins/standard/params.css']
   javascript_urls = ['js/params.js', 'js/util.js']
   doc_section = "parameters.html"
%]

<table border="0" width="100%">
  <tr>
    <td>
      [%# NAVIGATION BAR %]
      <table id="menu">
        <tr>
          <td class="index">
            <a href="editparams.cgi?section=index" title="Wyświetl wszystkie parametry">Indeks</a>
          </td>
        </tr>
        [% FOREACH panel = panels %]
          <tr>
            [% IF panel.current %]
              [% Hook.process("current_panel") %]
              <td class="selected_section">
                <span title="[% panel.desc FILTER html %]">[% panel.title FILTER html %]</span>
              </td>
            [% ELSE %]
              <td>
                <a href="editparams.cgi?section=[% panel.name FILTER uri %]"
                   title="[% panel.desc FILTER html %]">[% panel.title FILTER html %]</a>
              </td>
            [% END %]
          </tr>
        [% END %]
      </table>
    </td>
    <td>
      [% IF curpanel == -1 %]
        [% PROCESS admin/params/index.html.tmpl panels = panels %]
      [% ELSE %]

        <div class="contribute">
          <strong>[%+ terms.Bugzilla %]</strong> jest projektem rozwijanym przez wolontariuszy.
          Najlepszym sposobem podziękowania jest <a href="http://www.bugzilla.org/contribute/">
          wsparcie go</a>! Nie trzeba być programistą, by pomóc w rozwoju projektu. Jest mnóstwo
          różnych rzeczy, które trzeba zrobić i których potrzebujemy.
        </div>

        <p>
          Na tej stronie można dokonać modyfikacji podstawowych parametrów [% terms.Bugzilli %].
          Prosimy o ostrożność!<br>
          Zaznaczenie funkcji <strong>Resetuj</strong> spowoduje przywrócenie domyślnej wartości parametru.
        </p>

        [%# CONTENT PANEL %]
        <form method="post" action="editparams.cgi">
          [% PROCESS admin/params/common.html.tmpl panel = current_panel %]
          <input type="hidden" name="section" value="[% current_panel.name FILTER html %]">
          <input type="hidden" name="action" value="save">
          <input type="hidden" name="token" value="[% token FILTER html %]">
          <input type="submit" id="save-params" value="Zapisz zmiany">
        </form>
      [% END %]
    </td>
  </tr>
</table>

[% INCLUDE global/footer.html.tmpl %]
