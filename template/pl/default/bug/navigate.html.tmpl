[% PROCESS global/variables.none.tmpl %]

[% IF bug_list && bug_list.size > 0 %]
  [% this_bug_idx = lsearch(bug_list, bug.bug_id) %]
  <b>Lista [% terms.bledow %] :</b>
  [% IF this_bug_idx != -1 %]
    ([% this_bug_idx + 1 %] z [% bug_list.size %])
  [% END %]

[% IF this_bug_idx != -1 %]
  <a href="show_bug.cgi?id=[% bug_list.first %]">Pierwszy</a>
  <a href="show_bug.cgi?id=[% bug_list.last %]">Ostatni</a>
[% END %]

  [% IF bug.bug_id %]
    [% IF this_bug_idx != -1 %]
      [% IF this_bug_idx > 0 %]
        [% prev_bug = this_bug_idx - 1 %]
        <a href="show_bug.cgi?id=[% bug_list.$prev_bug %]">Poprzedni</a>
      [% ELSE %]
        <i><font color="#777777">Poprzedni</font></i>
      [% END %]

      [% IF this_bug_idx + 1 < bug_list.size %]
        [% next_bug = this_bug_idx + 1 %]
        <a href="show_bug.cgi?id=[% bug_list.$next_bug %]">Następny</a>
      [% ELSE %]
        <i><font color="#777777">Następny</font></i>
      [% END %]
    [% ELSE %]
      (Ten [% terms.blad %] nie znajduje się na liście błędów)
    [% END %]
  [% ELSE %]
    &nbsp;&nbsp;
  [% END %]

  &nbsp;&nbsp;<a href="buglist.cgi?regetlastlist=1">Wyświetl listę wyników ostatniego wyszukiwania</a>
[% ELSE %]
  [%# Either !bug_list || bug_list.size <= 0 %]
  [%# With no list, don't show link to search results %]
  <i><font color="#777777">Pierwszy</font></i>
  <i><font color="#777777">Ostatni</font></i>
  <i><font color="#777777">Poprzedni</font></i>
  <i><font color="#777777">Następny</font></i>
  &nbsp;&nbsp;
  <i><font color="#777777">Brak wyników wyszukiwania</font></i>
[% END %]
