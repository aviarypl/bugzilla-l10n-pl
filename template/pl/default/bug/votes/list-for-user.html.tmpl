[%# INTERFACE:
  # voting_user: hash containing a 'login' field
  #
  # products: list of hashes containing details of products relating to
  #           voting: 
  #            name: name of product
  #            bugs: list of bugs the user has voted for
  #            onevoteonly: one or more votes allowed per bug?
  #            total: users current vote count for the product
  #            maxvotes: max votes allowed for a user in this product
  #            maxperbug: max votes per bug allowed for a user in this product
  #
  # bug_id: number; if the user is voting for a bug, this is the bug id
  #
  # canedit: boolean; Should the votes be presented in a form, or readonly? 
  #%]

[% PROCESS global/variables.none.tmpl %]

[% IF !header_done %]
  [% h2 = voting_user.login FILTER html %]
  [% IF canedit %]
    [% title = "Zmiana oddanych głosów" %]
    [% IF bug_id %]
      [%# We .select and .focus the input so it works for textbox and 
          checkbox %]
      [% onload = "document.forms['voting_form'].bug_" _ bug_id _
                  ".select();document.forms['voting_form'].bug_" _ bug_id _
                  ".focus()" %]
    [% END %]
  [% ELSE %]
    [% title = "Oddane głosy" %]
  [% END %]
  [% PROCESS global/header.html.tmpl
             style_urls = [ "skins/standard/voting.css" ] 
  %]
[% ELSE %]
  <hr>
[% END %]

[% IF votes_recorded %]
  <p>
    <font color="red">
      Zmiany do oddanych głosów zostały zapamiętane.
    </font>
  </p>
[% ELSE %]
  <br>
[% END %]

[% IF products.size %]
  <form name="voting_form" method="post" action="votes.cgi">
    <input type="hidden" name="action" value="vote">
    <table cellspacing="4">
      <tr>
        <td></td>
        <th>Liczba głosów</th>
        <th>[% terms.Blad %]</th>
        <th>Podsumowanie</th>
      </tr>

      [% onevoteproduct = 0 %]
      [% multivoteproduct = 0 %]
      [% FOREACH product = products %]
        [% IF product.onevoteonly %]
          [% onevoteproduct = 1 %]
        [% ELSE %]
          [% multivoteproduct = 1 %]
        [% END %]
        <tr>
          <th>[% product.name FILTER html %]</th>
          <td></td>
          [% IF product.maxperbug < product.maxvotes AND
                product.maxperbug > 1 %]
            <td>
              <font size="-1">
                (Uwage: możliwe jest oddanie tylko [% product.maxperbug +%]
                [% product.maxperbug != 1 ? "głosów" : "głosu" %] na jeden [% terms.blad %] dla
                tego produktu.)
              </font>
            </td>
          [% END %]
        </tr>

        [% FOREACH bug = product.bugs %]
          <tr [% IF bug.id == bug_id && canedit %] 
            class="bz_bug_being_voted_on" [% END %]>
            <td>[% IF bug.id == bug_id && canedit %]Enter New Vote here &rarr;
              [%- END %]</td>
            <td align="right"><a name="vote_[% bug.id %]">
              [% IF canedit %]
                [% IF product.onevoteonly %]
                  <input type="checkbox" name="[% bug.id %]" value="1"
                    [% " checked" IF bug.count %] id="bug_[% bug.id %]">
                [% ELSE %]
                  <input name="[% bug.id %]" value="[% bug.count %]"
                         size="2" id="bug_[% bug.id %]">
                [% END %]
              [% ELSE %]
                [% bug.count %]
              [% END %]
            </a></td>
            <td align="right">
              [% isclosed = !bug.opened %]
                <a href="show_bug.cgi?id=[% bug.id %]">
                  [% bug.id FILTER closed(isclosed) %]
                </a>
            </td>
            <td>
              <a href="votes.cgi?action=show_bug&amp;bug_id=[% bug.id %]">
                [% bug.summary FILTER html %]
              </a>
            </td>
          </tr>
        [% END %]

        <tr>
          <td></td>
          <td colspan="3">
            Oddano [% product.total +%]
            [%+ PROCESS odmiana l=product.total s1="glos" s2="głosy" s3="głosów" %]
            z [% product.maxvotes +%].
            <br>
            <br>
          </td>
        </tr>
      [% END %]
    </table>

    [% IF canedit %]
      <input type="submit" value="Zmień swoje głosy">
      <br>
      <br>
      Aby zmienić swoje głosy,
      [% IF multivoteproduct %]
        wprowadź nową liczbę głosów (zero oznacza brak głosu)
        [% " lub " IF onevoteproduct %]
      [% END %]
      [% IF onevoteproduct %]
        zaznacz odpowiednie pole
      [% END %]
      i kliknij an odnośniku <b>Zmień swoje głosy</b>.
    [% END %]
  </form>
[% ELSE %]
  <p>
    Obecnie
    [% IF canedit %]
    nie głosujesz
    [% ELSE %]
    ten użytkownik nie głosuje
    [% END %]
    na żadny [% terms.blad %].
  </p>
[% END %]

<p>
  <a href="page.cgi?id=voting.html">Pomoc do systemu głosowania</a>.
</p>

[% BLOCK odmiana -%]
  [%- IF l == 1 -%]
    [%- s1 -%]
  [%- ELSIF (l % 100 < 10 || l % 100 > 20) &&l % 10 > 1 && l % 10 < 5 -%]
    [%- s2 -%]
  [%- ELSE -%]
    [%- s3 -%]
  [%- END -%]
[%- END %]

[% PROCESS global/footer.html.tmpl %]
