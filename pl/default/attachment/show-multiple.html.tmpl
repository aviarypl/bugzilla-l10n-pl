[% PROCESS global/variables.none.tmpl %]
[% filtered_summary = bugsummary FILTER html %]
[% h1 = BLOCK %]Wyświetl wszystkie załączniki dla 
  [%+ GetBugLink(bugid, "$terms.bledu #$bugid") %][% END %]
[% PROCESS global/header.html.tmpl
  title = "Wyświetl wszystkie załączniki dla $terms.bledu #$bugid"
  h1 = h1
  h2 = filtered_summary
  style = "
    table.attachment_info th { text-align: right; vertical-align: top; }
    table.attachment_info td { text-align: left; vertical-align: top; }
  "
%]

<br>

[% FOREACH a = attachments %]

  <div align="center">
  <table class="attachment_info" cellspacing="0" cellpadding="4" border="1" width="75%">
    <tr>
      <td valign="top" bgcolor="#cccccc" colspan="6">
        <big><b>Załącznik #[% a.attachid %]</b></big>
      </td>
    </tr>
    <tr>
      <td valign="top">
        [% a.description FILTER html FILTER obsolete(a.isobsolete) %]
      </td>

      <td valign="top">
        [% IF a.ispatch %]
          <i>łatka</i>
        [% ELSE %]
          [% a.contenttype FILTER html %]
        [% END %]
      </td>

      <td valign="top">[% a.date FILTER time %]</td>
      <td valign="top">[% a.datasize FILTER unitconvert %]</td>

      <td valign="top">
        [% IF a.flags.size == 0 %]
          <i>bez flag</i>
        [% ELSE %]
          [% FOREACH flag = a.flags %]
            [% IF flag.setter %]
              [% flag.setter.nick FILTER html %]:
            [% END %]
            [%+ flag.type.name FILTER html %][% flag.status %]
            [% IF flag.status == "?" && flag.requestee %]
              ([% flag.requestee.nick FILTER html %])
            [% END %]
            [% ", " IF !loop.last %]
          [% END %]
        [% END %]
      </td>

      <td valign="top">
        <a href="attachment.cgi?id=[% a.attachid %]&amp;action=edit">Edytuj</a>
      </td>
    </tr>
  </table>

  [% IF a.isviewable %]
    <iframe src="attachment.cgi?id=[% a.attachid %]&amp;action=view" width="75%" height="350">
      <b>Załącznik nie może być wyświetlony na tej stronie,
         ponieważ Twoja przeglądarka nie obsługuje IFRAME.
      <a href="attachment.cgi?id=[% a.attachid %]&amp;action=view">Wyświetl załącznik na osobnej stronie</a>.</b>
    </iframe>
  [% ELSE %]
    <p><b>
      Załącznik nie może zostać wyświetlony, ponieważ jego typ MIME nie jest text/*, image/*, lub application/vnd.mozilla.*.
      <a href="attachment.cgi?id=[% a.attachid %]&amp;action=view">Zapisz załącznik na dysku</a>.
    </b></p>
  [% END %]
  </div>

  <br><br>

[% END %]

[% PROCESS global/footer.html.tmpl %]
