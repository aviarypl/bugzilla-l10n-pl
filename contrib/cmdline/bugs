buglist="`dirname $0`/buglist"
htmlfile="`dirname $0`/buglist.html"

${buglist} "$@" 2>&1 1>${htmlfile}
if test ${?} == "0"; then
    echo `grep 'TR VALIGN=TOP ALIGN=LEFT CLASS=' ${htmlfile} | sed -e 's/<TR.*id=//' | sed -e 's/".*//'` | sed -e 's/ /\,/g'
else
    cat ${htmlfile} 1>&2
    exit 1
fi
