[% PROCESS global/variables.none.tmpl %]

[% title = BLOCK %]Potwierdzenie usunięcia typu flagi „[% flag_type.name FILTER html %]”[% END %]

[% PROCESS global/header.html.tmpl
  title = title
  doc_section = "flags-overview.html#flags-delete"
%]

<p>
  [% IF flag_type.flag_count %]
    Występuje [% flag_type.flag_count %] [% PROCESS ODMIEN c=flag_type.flag_count o1="flaga" o2="flagi" o3="flag" %] typu [% flag_type.name FILTER html %].
    W przypadku usunięcia tego typu, ww. flagi zostaną także usunięte.
  [% END %]

 Zamiast usuwania typu można dokonać jego 
   <a href="editflagtypes.cgi?action=deactivate&amp;id=[% flag_type.id %]&amp;token=
           [%- token FILTER html %]">dezaktywacji</a>, która sprawi, że 
   typ [% IF flag_type.flag_count %] i jego flagi [% END %] pozostaną w
   bazie danych, ale nie będą wyświetlane w interfejsie użytkownika.
</p>

<table>
   <tr>
      <td colspan="2">
         Czy na pewno chcesz usunąć ten typ?
      </td>
   </tr>
   <tr>
      <td>
         <a href="editflagtypes.cgi?action=delete&amp;id=[% flag_type.id %]&amp;token=
                 [%- token FILTER html %]">Tak
         </a>
      </td>
      <td align="right">
         <a href="editflagtypes.cgi">
            Nie, nie usuwaj
         </a>
      </td>
   </tr>
</table>

[% PROCESS global/footer.html.tmpl %]
